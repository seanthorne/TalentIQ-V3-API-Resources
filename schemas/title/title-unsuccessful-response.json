{
    "$schema": "http://json-schema.org/draft-04/schema#",
    "type": "object",
    "properties": {
        "errors": {
            "type": "array",
            "items": {
                "properties": {
                    "message": {
                        "type": "string",
                        "description": "error message"
                    }
                }
            }
        },
        "message": {
            "type": "string",
            "description": "Status message, ex. Success"
        },
        "status": {
            "type": "number",
            "description": "Status code, ex. 404"
        },
        "data": {
            "type": "null"
        }
    }
}
