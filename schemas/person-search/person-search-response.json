{
    "$schema": "http://json-schema.org/draft-04/schema#",
    "type": "object",
    "properties": {
        "errors": {
            "type": "array",
            "items": {
                "properties": {
                    "message": {
                        "type": "string",
                        "description": "error message"
                    }
                }
            }
        },
        "message": {
            "type": "string",
            "description": "Status message, ex. Success"
        },
        "status": {
            "type": "number",
            "description": "Status code, ex. 200"
        },
        "hits": {
            "type": "object",
            "properties": {
                "total": {
                    "type": "number",
                    "description": "total number of persons matching query"
                },
                "max_score": {
                    "type": "number"
                },
                "hits": {
                    "type": "array",
                    "items": {
                        "type": "object",
                        "properties": {
                            "_score": {
                                "type": "number"
                            },
                            "_source": {
                                "type": "schemas/person/person.json",
                                "description": "Person data structure"
                            }
                        }
                    }
                }
            }
        }
    }
}
